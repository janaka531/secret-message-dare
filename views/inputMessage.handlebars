<form action="/user/message" method="post">
    <div class="form-group">

        <textarea required name="message" class="form-control" id="exampleFormControlTextarea1" rows="5" placeholder="type your message here"></textarea>
        <input type="hidden" name="id" value="{{data.id}}">
        <br>
        <button type="submit" class="btn btn-success" name="submit" style="width: 100%;background-color: teal;color: white">Send Secret Message 😎</button>
    </div>
</form>
